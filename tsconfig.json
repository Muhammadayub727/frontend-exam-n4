{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "paths": {
      "@pages" : ["./src/pages"],
      "@service" : ["./src/service"],
      "@router" : ["./src/router"],
      "@validations" : ["./src/utils/validations.ts"],
      "@auth-interface" : ["./src/interfaces/auth.ts"],
      // "@modals" : ["./src/components/modals"],
      "@data-service" : ["./src/utils/data-service.ts"],
      "@services-interface" : ["./src/interfaces/services.ts"],
      "@global-interface" : ["./src/interfaces/global.ts"],
    },

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
